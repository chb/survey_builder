<% var errors = lineitem.errors() %>
<div <%= lineitem %> <% if (lineitem.id) { %> id="<%= lineitem.id %>" <% } %> class="lineitem <%= lineitem.type %> <%= lineitem.subType %> ui-corner-all" data-type="<%= lineitem.type %>" data-subType="<%= lineitem.subType %>">
    <span class="handle button hide-in-tabs"><%= lineitem.displayName %></span>
    <span class="ui-icon ui-icon-grip-dotted-vertical show-in-tabs"></span>
    <span class="ui-icon ui-icon-trash show-in-tabs"></span>
    <span class="ui-icon ui-icon-copy copy show-in-tabs" title="copy"></span>
    <h5 class="header show-in-tabs toggle"><span class="ui-icon ui-icon-triangle-1-s toggle-indicator show-in-tabs"></span><%= lineitem.displayName %></h5>
    <form class="lineitem-form show-in-tabs" onsubmit="return false;">
    	<fieldset>
	        <input type="hidden" name="displayName" value="<%= lineitem.displayName %>" />
	        <input type="hidden" name="type" value="<%= lineitem.type %>" />
	        <input type="hidden" name="subType" value="<%= lineitem.subType %>" />
	        <input type="hidden" name="parentId" value="<%= lineitem.parentId %>" />
	        <input type="hidden" name="parentType" value="<%= lineitem.parentType %>" />
	        <%= $.View('//surveybuilder/views/common/textarea', 
						{name:'answerText',
						value:lineitem.answerText, 
						title:'Text to display for this answer', 
						label:'Answer Text', 
						errors:errors, 
						hideable:false}) %>
			
			<div class="clearfix attribute hideable">
				<label title="Data Type" for="">Data Type</label>
				<div class="input">
					<button class="btn small datatype <% if (lineitem.datatype === SURVEY_UTILS.RDF) { %> primary disabled<% } %>" data-type="<%= SURVEY_UTILS.RDF %>">RDF Resource</button>
					<button class="btn small datatype <% if (lineitem.datatype === SURVEY_UTILS.BOOLEAN) { %> primary disabled<% } %>" data-type="<%= SURVEY_UTILS.BOOLEAN %>">Boolean</button>
					<button class="btn small datatype <% if (lineitem.datatype === SURVEY_UTILS.INTEGER) { %> primary disabled<% } %>" data-type="<%= SURVEY_UTILS.INTEGER %>">Integer</button>
					<button class="btn small datatype <% if (lineitem.datatype === SURVEY_UTILS.DECIMAL) { %> primary disabled<% } %>" data-type="<%= SURVEY_UTILS.DECIMAL %>">Decimal</button>
				</div>
			</div>
			
			<%= $.View('//surveybuilder/views/answer/show_answerObject', {lineitem:lineitem, errors:errors}) %>
			
        </fieldset>
    </form>
</div>
