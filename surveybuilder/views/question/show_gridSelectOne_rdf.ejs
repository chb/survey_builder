<GridSelectOneQuestion<% if (lineitem.about){ %> rdf:about="<%= lineitem.about %>" <% } %>>
    <% if (lineitem.questionText) { %>
        <questionText><%= lineitem.questionText %></questionText>
    <% } %>
    
    <% if (lineitem.defaultAnswerForEstimation) { %>
        <defaultAnswerForEstimation rdf:resource="<%= lineitem.defaultAnswerForEstimation %>" />
    <% } %>

    <GridAnswers>
		<AnswerSequence rdf:about="#<%= lineitem.about %>Answers">
            <% if (lineitem.childAnswer) {%>
                <% var childLineitem = Lineitem.findOne({id:lineitem.childAnswer}) %>
                <%= $.View('//surveybuilder/views/lineitem/show_rdf', {lineitem:childLineitem}) %>
            <% } %>
        </AnswerSequence>
    </GridAnswers>
    
    <GridQuestions>
		<QuestionSequence>
            <% if (lineitem.childQuestion) {%>
                <% var childLineitem = Lineitem.findOne({id:lineitem.childQuestion}) %>
                <%= $.View('//surveybuilder/views/lineitem/show_rdf', {lineitem:childLineitem}) %>
            <% } %>
        </QuestionSequence>
    </GridQuestions>
</GridSelectOneQuestion>

