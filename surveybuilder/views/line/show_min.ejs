<% var isSurveyLine = Survey.findOne({id:1}).surveyLine === line.about %>
<div <%= line %> class="lineitem <% if (!isSurveyLine) { %>branch<% } %> line ui-corner-all" data-line="<%= line.id %>" data-type="LogicComponent" data-subType="Branch">
    <span class="btn small drop-down-btn">
	    <span class="drop-down hide-in-tabs ui-icon ui-icon-triangle-1-s"></span>
		<div class="drop-down-list">
    		<a href="#" class="edit-line btn small primary" data-line="<%= line.id %>">edit</a>
    		<% if (!isSurveyLine) { %>
    			<a href="#" class="delete-line btn small primary" data-line="<%= line.id %>">delete</a>
    		<% } %>
    	</div>
		<span class="handle display-name hide-in-tabs" title="<%= line.name %>"><%= line.internalName %></span>
    </span>
    <span class="ui-icon handle ui-icon-grip-dotted-vertical show-in-tabs"></span>
    <span class="ui-icon ui-icon-trash show-in-tabs"></span>
    <div class="header show-in-tabs">Branch to: <span class="display-name"><%= line.title %></span></div>
    <form>
        <input type="hidden" name="type" value="LogicComponent" />
        <input type="hidden" name="subType" value="Branch" />
        <input type="hidden" name="about" value="<%= line.about %>" />
        <input type="hidden" name="displayName" value="<%= line.title %>" />
    </form>
</div>