<div <% if (lineitem.id) { %> id="<%= lineitem.id %>" <% } %> class="lineitem <%= lineitem.type %> ui-corner-all <%= lineitem.subType %>">
    <span class="handle sexybutton sexysimple sexysilver hide-in-tabs"><%= lineitem.displayName %></span>
    <span class="ui-icon ui-icon-triangle-1-s"></span>
    <span class="ui-icon ui-icon-grip-dotted-vertical"></span>
    <span class="ui-icon ui-icon-trash"></span>
    
    <div class="header hideable"><%= lineitem.displayName %></div>
    <form class="lineitem-form" onsubmit="return false;">
        <input type="hidden" name="displayName" value="<%= lineitem.displayName %>" />
        <input type="hidden" name="type" value="<%= lineitem.type %>" />
        <input type="hidden" name="subType" value="<%= lineitem.subType %>" />
        <input type="hidden" name="parentId" value="<%= lineitem.parentId %>" />
        <input type="hidden" name="parentType" value="<%= lineitem.parentType %>" />
        <table>
            <tr class="hideable">
                <td class="td-label" title="The branch condition">Branch Condition:<span class="marker" title="required">*</span></td>
                <td class="td-input"><input type="text" name="branchCondition" value="<%= lineitem.branchCondition %>" class="ui-corner-all"/></td>
            </tr>
            <tr>
                <td class="td-label" title="The Section to branch to">Branch target:<span class="marker" title="required">*</span></td>
                <td class="td-input">
                	<select name="branchTarget" class="branchTarget">
                		<% for(var line in LINES) { %>
							<option value="<%= LINES[line].id %>" <% if (lineitem.branchTarget && lineitem.branchTarget === LINES[line].id) { %> selected="selected" <% } %>><%= LINES[line].title %></option>
						<% } %>
		            </select>
                </td>
            </tr>
        </table>
    </form>
</div>

